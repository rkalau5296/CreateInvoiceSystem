@page "/reset-password"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using CreateInvoiceSystem.Frontend.Services
@attribute [AllowAnonymous]
@inject NavigationManager Navigation
@inject AuthService AuthService

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Ustaw nowe hasło</h3>

            @if (_isSuccess)
            {
                <div class="alert alert-success">Hasło zostało zmienione.</div>
                <button class="btn btn-primary w-100" @onclick='(() => Navigation.NavigateTo("/login"))'>Zaloguj się</button>
            }
            else
            {
                <EditForm EditContext="_editContext" OnValidSubmit="HandleReset" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">Nowe hasło <span class="text-danger">*</span></label>
                        <InputText @bind-Value="_model.Password"
                                   type="password"
                                   class="@($"form-control {GetFieldClass(() => _model.Password)}")" />
                        <ValidationMessage For="@(() => _model.Password)" class="text-danger small" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Powtórz hasło <span class="text-danger">*</span></label>
                        <InputText @bind-Value="_model.ConfirmPassword"
                                   type="password"
                                   class="@($"form-control {GetFieldClass(() => _model.ConfirmPassword)}")" />
                        <ValidationMessage For="@(() => _model.ConfirmPassword)" class="text-danger small" />
                    </div>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger small">@_errorMessage</div>
                    }

                    <button type="submit" class="btn btn-success w-100" disabled="@_isProcessing">
                        @if (_isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Zmień hasło
                    </button>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private ResetPasswordViewModel _model = new();
    private bool _isProcessing;
    private bool _isSuccess;
    private string? _errorMessage;

    private EditContext _editContext = default!;
    private ValidationMessageStore _messageStore = default!;
    private bool _submitAttempted = false;

    [Parameter][SupplyParameterFromQuery] public string? Token { get; set; }
    [Parameter][SupplyParameterFromQuery] public string? Email { get; set; }

    protected override void OnInitialized()
    {
        _edit_context_init();
    }

    private void _edit_context_init()
    {
        _editContext = new EditContext(_model);
        _messageStore = new ValidationMessageStore(_editContext);
        
        _editContext.OnFieldChanged += (s, e) =>
        {
            _messageStore.Clear(e.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
        };
    }

    private void HandleInvalidSubmit(EditContext context)
    {
        _submitAttempted = true;
        _errorMessage = "Uzupełnij wymagane pola.";
        _editContext.NotifyValidationStateChanged();
    }

    private async Task HandleReset()
    {        
        _submitAttempted = true;
        _messageStore.Clear();
        _errorMessage = null;

        if (string.IsNullOrEmpty(Token) || string.IsNullOrEmpty(Email))
        {
            _errorMessage = "Brak tokena lub adresu email.";
            return;
        }

        _isProcessing = true;

        try
        {
            var result = await AuthService.ResetPasswordAsync(Email, Token, _model.Password);
            if (result.IsSuccess)
            {
                _isSuccess = true;
            }
            else
            {
                _errorMessage = result.Message;
            }
        }
        catch
        {
            _errorMessage = "Błąd komunikacji z serwerem.";
        }
        finally
        {
            _isProcessing = false;
            _editContext.NotifyValidationStateChanged();
        }
    }

    private string GetFieldClass<T>(System.Linq.Expressions.Expression<Func<T>> accessor)
    {
        var fieldId = FieldIdentifier.Create(accessor);
        
        if (_editContext.GetValidationMessages(fieldId).Any())
            return "is-invalid";
        
        var fieldTouchedOrSubmitted = _submitAttempted || _editContext.IsModified(fieldId);
        if (!fieldTouchedOrSubmitted)
            return "";
        
        T? value;
        try
        {
            value = accessor.Compile().Invoke();
        }
        catch
        {
            value = default;
        }

        bool hasValue;
        if (value is string s)
            hasValue = !string.IsNullOrWhiteSpace(s);
        else
            hasValue = !EqualityComparer<T?>.Default.Equals(value, default);
        
        return hasValue ? "is-valid" : "is-invalid";
    }

    public class ResetPasswordViewModel
    {
        [Required(ErrorMessage = "Hasło jest wymagane")]
        [MinLength(6, ErrorMessage = "Minimum 6 znaków")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Powtórz hasło")]
        [Compare("Password", ErrorMessage = "Hasła muszą być identyczne")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}