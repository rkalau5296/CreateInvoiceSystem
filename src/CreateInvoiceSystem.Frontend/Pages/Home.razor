@page "/"
@inject NavigationManager Navigation
@attribute [AllowAnonymous]

<div class="welcome-container d-flex flex-column align-items-center justify-content-center border-top border-5 border-primary">
    <div class="text-center p-5 shadow-lg rounded bg-white" style="max-width: 600px;">
        <div class="mb-4">
            <i class="bi bi-file-earmark-check text-primary" style="font-size: 4rem;"></i>
        </div>

        <h1 class="display-4 fw-bold mb-3">System Faktur</h1>
        <p class="lead text-muted mb-5">
            Profesjonalne zarządzanie dokumentami finansowymi z zachowaniem ciągłości danych dzięki technologii snapshotów.
        </p>

        <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mb-4">
            <button class="btn btn-primary btn-lg px-5 shadow" @onclick='() => Navigation.NavigateTo("/login")'>
                <i class="bi bi-box-arrow-in-right me-2"></i> Zaloguj się
            </button>
            <button class="btn btn-outline-secondary btn-lg px-4" @onclick="ToggleAbout">
                <i class="bi bi-info-circle me-2"></i> Dowiedz się więcej
            </button>
        </div>

        @if (_showAbout)
        {
            <div class="mt-4 p-4 bg-light rounded border text-start animate-fade-in">
                <h5 class="fw-bold border-bottom pb-2 mb-3 text-dark">Kluczowe funkcje:</h5>
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="bi bi-database-check text-success me-2"></i>
                        <strong>Snapshoty danych:</strong> Zmiana danych klienta lub produktu w przyszłości nie wpłynie na treść już wystawionych faktur.
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-file-pdf text-danger me-2"></i>
                        <strong>Generowanie PDF:</strong> Błyskawiczne tworzenie profesjonalnych dokumentów gotowych do wysyłki.
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-graph-up-arrow text-primary me-2"></i>
                        <strong>Generowanie CSV:</strong> Błyskawiczne tworzenie raportów w formacie CSV.
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-graph-up-arrow text-primary me-2"></i>
                        <strong>Wysyłka maila:</strong> Po utworzeniu nowej faktury wysyłany jest e-mail potwierdzający utworzenie faktury.
                    </li>
                </ul>
                <div class="small text-muted mt-3 pt-2 border-top d-flex justify-content-between align-items-center">
                    <span>Status: <span class="badge bg-success shadow-sm">Online</span></span>
                    <span>Wersja: 1.0.4 Beta</span>
                </div>
            </div>
        }

        <div class="mt-5">
            <small class="text-muted">Stworzone z pasją dla Twojego biznesu &copy; 2026</small>
        </div>
    </div>
</div>

<style>
    .welcome-container {       
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px;
    }

    .animate-fade-in {
        animation: fadeIn 0.4s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-primary {
        transition: transform 0.2s;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
        }
</style>

@code {
    private bool _showAbout = false;

    private void ToggleAbout()
    {
        _showAbout = !_showAbout;
    }
}