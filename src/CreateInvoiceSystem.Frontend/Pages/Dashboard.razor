@page "/dashboard"
@using CreateInvoiceSystem.Frontend.Services
@inject NavigationManager Navigation
@inject InvoiceService InvoiceService
@inject AuthService AuthService

@if (_isLoading)
{
    <div class="welcome-container d-flex align-items-center justify-content-center">
        <div class="text-center p-5 shadow-lg rounded bg-white">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Ładowanie...</span>
            </div>
            <p class="lead text-muted">Inicjalizacja systemu i pobieranie danych...</p>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4 animate-fade-in">
        <div class="row mb-4">
            <div class="col">
                <h2 class="fw-bold">Witaj w systemie, @(_userName ?? "Użytkowniku")! 👋</h2>
                <p class="text-muted">Oto podsumowanie Twoich finansów na dzień @DateTime.Now.ToLongDateString()</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-primary text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Suma Brutto (miesiąc)</h6>
                            <h3 class="fw-bold mb-0">@_totalGross.ToString("N2") PLN</h3>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-success text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Liczba faktur</h6>
                            <h3 class="fw-bold mb-0">@_invoiceCount</h3>
                        </div>
                        <i class="bi bi-file-earmark-text fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm bg-info text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Aktywni kontrahenci</h6>
                            <h3 class="fw-bold mb-0">@_clientCount</h3>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="bi bi-lightning-charge me-2 text-warning"></i>Szybkie akcje
                    </div>
                    <div class="card-body d-flex gap-3">
                        <button class="btn btn-primary px-4 shadow-sm" @onclick='() => Navigation.NavigateTo("/invoices/create")'>
                            <i class="bi bi-plus-circle me-2"></i> Wystaw fakturę
                        </button>
                        <button class="btn btn-outline-primary px-4" @onclick='() => Navigation.NavigateTo("/invoices")'>
                            <i class="bi bi-list-ul me-2"></i> Przeglądaj faktury
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .welcome-container {
        min-height: 60vh;
    }
</style>

@code {
    private string? _userName;
    private decimal _totalGross = 0;
    private int _invoiceCount = 0;
    private int _clientCount = 0;
    private bool _isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        try
        {            
            var userResponse = await AuthService.GetMySettingsAsync();
            if (userResponse?.Data != null)
            {
                _userName = userResponse.Data.Name;
            }
         
            var response = await InvoiceService.GetInvoicesAsync(1, 100, "");
            if (response != null)
            {
                _invoiceCount = response.TotalCount;
                _totalGross = response.Data.Sum(x => x.TotalGross);
            }
            
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Dashboard Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }
}