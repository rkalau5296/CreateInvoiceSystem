@page "/dashboard"
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@inject NavigationManager Navigation
@inject InvoiceService InvoiceService
@inject ClientService ClientService
@inject ProductService ProductService
@inject AuthService AuthService

@if (_isLoading)
{
    <div class="welcome-container d-flex align-items-center justify-content-center">
        <div class="text-center p-5 shadow-lg rounded bg-white">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Ładowanie...</span>
            </div>
            <p class="lead text-muted">Inicjalizacja systemu i pobieranie danych...</p>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4 animate-fade-in">
        <div class="row mb-4">
            <div class="col">
                <h2 class="fw-bold">Witaj w systemie, @(_userName ?? "Użytkowniku")! 👋</h2>
                <p class="text-muted">Oto podsumowanie Twoich finansów na dzień @DateTime.Now.ToLongDateString()</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-primary text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Suma Brutto (miesiąc)</h6>
                            <h3 class="fw-bold mb-0">@_totalGross.ToString("N2") PLN</h3>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-success text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Liczba faktur</h6>
                            <h3 class="fw-bold mb-0">@_invoiceCount</h3>
                        </div>
                        <i class="bi bi-file-earmark-text fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-info text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Aktywni kontrahenci</h6>
                            <h3 class="fw-bold mb-0">@_clientCount</h3>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm bg-warning text-white p-3 h-100">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50">Liczba produktów</h6>
                            <h3 class="fw-bold mb-0">@_productCount</h3>
                        </div>
                        <i class="bi bi-box-seam fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="bi bi-lightning-charge me-2 text-warning"></i>Szybkie akcje
                    </div>
                    <div class="card-body d-flex gap-3">
                        <button class="btn btn-primary px-4 shadow-sm" @onclick='() => Navigation.NavigateTo("/invoices/create")'>
                            <i class="bi bi-plus-circle me-2"></i> Wystaw fakturę
                        </button>
                        <button class="btn btn-outline-primary px-4" @onclick='() => Navigation.NavigateTo("/invoices")'>
                            <i class="bi bi-list-ul me-2"></i> Przeglądaj faktury
                        </button>
                        <button class="btn btn-outline-secondary px-4" @onclick='() => Navigation.NavigateTo("/clients")'>
                            <i class="bi bi-person-plus me-2"></i> Kontrahenci
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="bi bi-clock-history me-2 text-primary"></i>Ostatnie faktury
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Numer</th>
                                        <th>Klient</th>
                                        <th>Data</th>
                                        <th class="text-end pe-3">Kwota</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (_recentInvoices.Any())
                                    {
                                        @foreach (var inv in _recentInvoices)
                                        {
                                            <tr>
                                                <td class="ps-3 fw-medium">@inv.Title</td>
                                                <td>@inv.ClientName</td>
                                                <td>@inv.CreatedDate.ToShortDateString()</td>
                                                <td class="text-end pe-3 fw-bold">@inv.TotalGross.ToString("N2")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-4 text-muted">Brak wystawionych faktur</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="bi bi-person-badge me-2 text-info"></i>Najnowsi klienci
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            @if (_recentClients.Any())
                            {
                                @foreach (var client in _recentClients)
                                {
                                    <li class="list-group-item px-0 py-3 d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="fw-bold">@client.Name</div>
                                            <small class="text-muted">NIP: @client.Nip</small>
                                        </div>
                                        <span class="badge bg-light text-dark border">@client.Name</span>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-center py-4 text-muted">Brak kontrahentów</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .welcome-container {
        min-height: 60vh;
    }

    .table-hover tbody tr:hover {
        cursor: pointer;
        background-color: rgba(0,0,0,0.02);
    }
</style>

@code {
    private string? _userName;
    private decimal _totalGross = 0;
    private int _invoiceCount = 0;
    private int _clientCount = 0;
    private int _productCount = 0;
    private bool _isLoading = true;

    private List<InvoiceDto> _recentInvoices = new();
    private List<ClientDto> _recentClients = new();

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        try
        {
            var userTask = AuthService.GetMySettingsAsync();
            var invoiceTask = InvoiceService.GetInvoicesAsync(1, 100, "");
            var clientTask = ClientService.GetClientsAsync(1, 5, "");
            var productTask = ProductService.GetProductsAsync(1, 1, "");

            await Task.WhenAll(userTask, invoiceTask, clientTask, productTask);

            var userResponse = await userTask;
            if (userResponse?.Data != null) _userName = userResponse.Data.Name;

            var invoiceResponse = await invoiceTask;
            if (invoiceResponse != null)
            {
                _invoiceCount = invoiceResponse.TotalCount;
                _totalGross = invoiceResponse.Data.Sum(x => x.TotalGross);
                _recentInvoices = invoiceResponse.Data.OrderByDescending(x => x.CreatedDate).Take(5).ToList();
            }

            var clientResponse = await clientTask;
            if (clientResponse != null)
            {
                _clientCount = clientResponse.TotalCount;
                _recentClients = clientResponse.Data.Take(5).ToList();
            }

            var productResponse = await productTask;
            if (productResponse != null) _productCount = productResponse.TotalCount;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Dashboard Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }
}