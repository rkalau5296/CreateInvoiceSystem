@page "/nbp-rates"

<PageTitle>Kursy Walut NBP</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-currency-exchange me-2"></i>Aktualne Kursy NBP</h1>
        <button class="btn btn-primary" @onclick="RefreshRates">
            <i class="bi bi-arrow-clockwise me-1"></i> Odśwież kursy
        </button>
    </div>

    <p>Tutaj pojawią się kursy walut pobrane z API NBP.</p>
</div>

@code {
    private async Task RefreshRates()
    {        
        await Task.CompletedTask;
    }
}