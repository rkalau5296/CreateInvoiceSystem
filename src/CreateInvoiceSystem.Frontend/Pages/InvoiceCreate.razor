@page "/invoices/create"
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@inject InvoiceService InvoiceService
@inject ClientService ClientService
@inject ProductService ProductService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Nowa Faktura</h3>
            <button class="btn btn-sm btn-outline-light" @onclick='() => Navigation.NavigateTo("/invoices")'>
                <i class="bi bi-arrow-left"></i> Powrót do listy
            </button>
        </div>
        <div class="card-body">
            <EditForm EditContext="_editContext" OnSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Tytuł faktury <span class="text-danger">*</span></label>
                        <InputText @bind-Value="_invoice.Title" class="@($"form-control {GetFieldClass(() => _invoice.Title)}")" placeholder="np. FV 01/2026" />
                        <ValidationMessage For="@(() => _invoice.Title)" class="text-danger small" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Data wystawienia <span class="text-danger">*</span></label>
                        <InputDate @bind-Value="_invoice.CreatedDate" class="@($"form-control {GetFieldClass(() => _invoice.CreatedDate)}")" />
                        <ValidationMessage For="@(() => _invoice.CreatedDate)" class="text-danger small" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">Termin płatności <span class="text-danger">*</span></label>
                        <InputDate @bind-Value="_invoice.PaymentDate" class="@($"form-control {GetFieldClass(() => _invoice.PaymentDate)}")" />
                        <ValidationMessage For="@(() => _invoice.PaymentDate)" class="text-danger small" />
                    </div>
                </div>

                <div class="card mb-4 bg-light border-0">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Dane Nabywcy</h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="small fw-bold">Wybierz klienta lub wpisz nową nazwę <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.ClientName"
                                           list="clientOptions"
                                           class="@($"form-control {GetFieldClass(() => _invoice.ClientName)}")"
                                           @oninput="(ChangeEventArgs e) => { _invoice.ClientName = e.Value?.ToString(); HandleClientChange(_invoice.ClientName); }"
                                           placeholder="Nazwa klienta..." />
                                <ValidationMessage For="@(() => _invoice.ClientName)" class="text-danger small" />
                            </div>
                            <div class="col-md-6">
                                <label class="small fw-bold">NIP <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.ClientNip" class="@($"form-control {GetFieldClass(() => _invoice.ClientNip)}")" placeholder="NIP" />
                                <ValidationMessage For="@(() => _invoice.ClientNip)" class="text-danger small" />
                            </div>

                            <div class="col-md-5">
                                <label class="small fw-bold">Ulica <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.Client.Address.Street" class="@($"form-control {GetFieldClass(() => _invoice.Client.Address.Street)}")" placeholder="Ulica" />
                                <ValidationMessage For="@(() => _invoice.Client.Address.Street)" class="text-danger small" />
                            </div>
                            <div class="col-md-2">
                                <label class="small fw-bold">Nr domu/lok. <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.Client.Address.Number" class="@($"form-control {GetFieldClass(() => _invoice.Client.Address.Number)}")" placeholder="Nr" />
                                <ValidationMessage For="@(() => _invoice.Client.Address.Number)" class="text-danger small" />
                            </div>
                            <div class="col-md-2">
                                <label class="small fw-bold">Kod pocztowy <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.Client.Address.PostalCode" class="@($"form-control {GetFieldClass(() => _invoice.Client.Address.PostalCode)}")" placeholder="00-000" />
                                <ValidationMessage For="@(() => _invoice.Client.Address.PostalCode)" class="text-danger small" />
                            </div>
                            <div class="col-md-3">
                                <label class="small fw-bold">Miasto <span class="text-danger">*</span></label>
                                <InputText @bind-Value="_invoice.Client.Address.City" class="@($"form-control {GetFieldClass(() => _invoice.Client.Address.City)}")" placeholder="Miasto" />
                                <ValidationMessage For="@(() => _invoice.Client.Address.City)" class="text-danger small" />
                            </div>
                        </div>
                    </div>
                </div>

                <h5 class="mb-3 text-secondary">Pozycje na fakturze</h5>
                @{
                    var posField = new FieldIdentifier(_invoice, nameof(_invoice.InvoicePositions));
                    var posErrors = _editContext?.GetValidationMessages(posField) ?? Enumerable.Empty<string>();
                }
                @if (posErrors.Any())
                {
                    <div class="alert alert-danger small">
                        @foreach (var msg in posErrors)
                        {
                            <div>@msg</div>
                        }
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Lp.</th>
                                <th>Produkt / Usługa <span class="text-danger">*</span></th>
                                <th style="width: 80px">Ilość <span class="text-danger">*</span></th>
                                <th style="width: 140px">Cena netto <span class="text-danger">*</span></th>
                                <th style="width: 100px">VAT</th>
                                <th style="width: 130px">Kwota VAT</th>
                                <th style="width: 150px">Wartość BRUTTO</th>
                                <th style="width: 50px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int lp = 1;
                            }
                            @foreach (var pos in _invoice.InvoicePositions)
                            {
                                <tr>
                                    <td>@(lp++)</td>
                                    <td>
                                        <InputText @bind-Value="pos.ProductName"
                                                   list="productOptions"
                                                   class="@($"form-control {GetFieldClass(() => pos.ProductName)}")"
                                                   @oninput="(ChangeEventArgs e) => { pos.ProductName = e.Value?.ToString(); HandleProductChange(pos, pos.ProductName); }"
                                                   placeholder="Nazwa produktu..." />
                                        <ValidationMessage For="@(() => pos.ProductName)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputNumber @bind-Value="pos.Quantity" class="@($"form-control {GetFieldClass(() => pos.Quantity)}")" />
                                        <ValidationMessage For="@(() => pos.Quantity)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <InputNumber @bind-Value="pos.ProductValue" class="@($"form-control {GetFieldClass(() => pos.ProductValue)}")" />
                                        <ValidationMessage For="@(() => pos.ProductValue)" class="text-danger small" />
                                    </td>
                                    <td>
                                        <select @bind="pos.VatRate" class="form-select">
                                            <option value="23%">23%</option>
                                            <option value="8%">8%</option>
                                            <option value="5%">5%</option>
                                            <option value="zw">zw</option>
                                            <option value="0%">0%</option>
                                        </select>
                                    </td>
                                    <td class="text-end">@CalculatePositionVat(pos).ToString("N2") PLN</td>
                                    <td class="fw-bold text-end">@CalculatePositionGross(pos).ToString("N2") PLN</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-danger px-3 shadow-sm" @onclick="() => RemovePosition(pos)">
                                            <i class="bi bi-trash"></i> Usuń
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <button type="button" class="btn btn-outline-secondary btn-sm mb-4" @onclick="AddPosition">
                    <i class="bi bi-plus-lg"></i> Dodaj kolejną pozycję
                </button>

                <div class="row">
                    <div class="col-md-12 text-end mb-4">
                        <div class="p-3 bg-light rounded d-inline-block border text-end" style="min-width: 300px;">
                            <div class="text-muted">Suma netto: @CalculateTotalNet().ToString("N2") PLN</div>
                            <div class="text-muted mb-1">Suma VAT: @CalculateTotalVat().ToString("N2") PLN</div>
                            <h3 class="mb-0 text-primary fw-bold">RAZEM (Brutto): @CalculateTotalGross().ToString("N2") PLN</h3>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3">
                    <button type="button" class="btn btn-light px-4" @onclick='() => Navigation.NavigateTo("/invoices")'>Anuluj</button>
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                        Wystaw i zapisz fakturę
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<datalist id="productOptions">
    @foreach (var p in _availableProducts)
    {
        <option value="@p.Name">@p.Value PLN</option>
    }
</datalist>

<datalist id="clientOptions">
    @foreach (var c in _availableClients)
    {
        <option value="@c.Name">NIP: @c.Nip</option>
    }
</datalist>

@code {
    private InvoiceDto _invoice = new()
    {
        CreatedDate = DateTime.Today,
        PaymentDate = DateTime.Today.AddDays(14),
        InvoicePositions = new List<InvoicePositionDto>(),
        Client = new ClientDto { Address = new AddressDto() }
    };

    private List<ProductDto> _availableProducts = new();
    private List<ClientDto> _availableClients = new();
    private EditContext _editContext = default!;
    private ValidationMessageStore _messageStore = default!;

    protected override async Task OnInitializedAsync()
    {
        _edit_context_init();
        try
        {
            var pResponse = await ProductService.GetProductsAsync(1, 1000);
            var cResponse = await ClientService.GetClientsAsync(1, 1000);
            _availableProducts = pResponse?.Data ?? new();
            _availableClients = cResponse?.Data ?? new();

            if (!_invoice.InvoicePositions.Any()) AddPosition();
        }
        catch (Exception ex) { Console.WriteLine($"Błąd inicjalizacji: {ex.Message}"); }
    }

    private void _edit_context_init()
    {
        _editContext = new EditContext(_invoice);
        _messageStore = new ValidationMessageStore(_editContext);
        _editContext.OnFieldChanged += (s, e) =>
        {
            _messageStore.Clear(e.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
        };
    }

    private void AddPosition() => _invoice.InvoicePositions.Add(new InvoicePositionDto
    {
        Quantity = 1,
        ProductName = "",
        ProductValue = 0,
        VatRate = "23%",
        Product = new ProductDto()
    });

    private void RemovePosition(InvoicePositionDto pos)
    {
        _invoice.InvoicePositions.Remove(pos);

        var posField = new FieldIdentifier(_invoice, nameof(_invoice.InvoicePositions));
        _messageStore.Clear(posField);
        _editContext.NotifyValidationStateChanged();
    }

    private decimal CalculatePositionVat(InvoicePositionDto pos)
    {
        var net = (pos.ProductValue ?? 0) * pos.Quantity;
        if (pos.VatRate == "zw" || string.IsNullOrEmpty(pos.VatRate) || !pos.VatRate.Contains("%")) return 0;
        decimal.TryParse(pos.VatRate.Replace("%", ""), out var rate);
        return Math.Round(net * (rate / 100m), 2);
    }

    private decimal CalculatePositionGross(InvoicePositionDto pos) => Math.Round(((pos.ProductValue ?? 0) * pos.Quantity) + CalculatePositionVat(pos), 2);
    private decimal CalculateTotalNet() => Math.Round(_invoice.InvoicePositions.Sum(p => (p.ProductValue ?? 0) * p.Quantity), 2);
    private decimal CalculateTotalVat() => Math.Round(_invoice.InvoicePositions.Sum(p => CalculatePositionVat(p)), 2);
    private decimal CalculateTotalGross() => Math.Round(_invoice.InvoicePositions.Sum(p => CalculatePositionGross(p)), 2);

    private void HandleProductChange(InvoicePositionDto position, string? newValue)
    {
        var match = _availableProducts.FirstOrDefault(p => p.Name.Equals(newValue, StringComparison.OrdinalIgnoreCase));
        if (match != null)
        {
            position.ProductId = match.ProductId;
            position.ProductName = match.Name;
            position.ProductValue = match.Value;
        }

        var fiName = new FieldIdentifier(position, nameof(position.ProductName));
        var fiValue = new FieldIdentifier(position, nameof(position.ProductValue));
        var fiQty = new FieldIdentifier(position, nameof(position.Quantity));

        _messageStore.Clear(fiName);
        _messageStore.Clear(fiValue);
        _messageStore.Clear(fiQty);

        _editContext.NotifyFieldChanged(fiName);
        _editContext.NotifyFieldChanged(fiValue);
        _editContext.NotifyFieldChanged(fiQty);
    }

    private void HandleClientChange(string? newValue)
    {
        var match = _availableClients.FirstOrDefault(c => c.Name.Equals(newValue, StringComparison.OrdinalIgnoreCase));
        if (match != null)
        {
            _invoice.ClientId = match.ClientId;
            _invoice.ClientName = match.Name;
            _invoice.ClientNip = match.Nip;

            if (_invoice.Client == null) _invoice.Client = new ClientDto();
            if (_invoice.Client.Address == null) _invoice.Client.Address = new AddressDto();

            _invoice.Client.Address.Street = match.Address.Street;
            _invoice.Client.Address.Number = match.Address.Number;
            _invoice.Client.Address.City = match.Address.City;
            _invoice.Client.Address.PostalCode = match.Address.PostalCode;
            _invoice.Client.Address.Country = match.Address.Country;
        }
        else
        {
            _invoice.ClientId = null;
        }

        var fiName = new FieldIdentifier(_invoice, nameof(_invoice.ClientName));
        var fiNip = new FieldIdentifier(_invoice, nameof(_invoice.ClientNip));
        _messageStore.Clear(fiName);
        _messageStore.Clear(fiNip);
        _editContext.NotifyFieldChanged(fiName);
        _editContext.NotifyFieldChanged(fiNip);

        if (_invoice.Client?.Address != null)
        {
            var fiStreet = new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.Street));
            var fiNumber = new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.Number));
            var fiPostal = new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.PostalCode));
            var fiCity = new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.City));

            _messageStore.Clear(fiStreet);
            _messageStore.Clear(fiNumber);
            _messageStore.Clear(fiPostal);
            _messageStore.Clear(fiCity);

            _editContext.NotifyFieldChanged(fiStreet);
            _editContext.NotifyFieldChanged(fiNumber);
            _editContext.NotifyFieldChanged(fiPostal);
            _editContext.NotifyFieldChanged(fiCity);
        }

        _editContext.NotifyValidationStateChanged();
    }

    private string GetFieldClass<T>(System.Linq.Expressions.Expression<Func<T>> accessor)
    {
        var fieldId = FieldIdentifier.Create(accessor);
        var fieldHasErrors = _editContext.GetValidationMessages(fieldId).Any();
        if (fieldHasErrors) return "is-invalid";

        if (_editContext.GetValidationMessages().Any()) return "is-valid";

        return "";
    }

    private async Task HandleSubmit()
    {
        _messageStore.Clear();

        if (string.IsNullOrWhiteSpace(_invoice.Title))
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.Title)), "Wymagane");

        if (_invoice.CreatedDate == default)
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.CreatedDate)), "Wymagane");
        if (_invoice.PaymentDate == default)
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.PaymentDate)), "Wymagane");

        if (string.IsNullOrWhiteSpace(_invoice.ClientName))
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.ClientName)), "Wymagane");

        if (string.IsNullOrWhiteSpace(_invoice.ClientNip))
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.ClientNip)), "Wymagane");

        if (_invoice.Client?.Address == null)
        {
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.Client)), "Brak danych adresowych");
        }
        else
        {
            if (string.IsNullOrWhiteSpace(_invoice.Client.Address.Street))
                _messageStore.Add(new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.Street)), "Wymagane");

            if (string.IsNullOrWhiteSpace(_invoice.Client.Address.Number))
                _messageStore.Add(new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.Number)), "Wymagane");

            if (string.IsNullOrWhiteSpace(_invoice.Client.Address.PostalCode))
                _messageStore.Add(new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.PostalCode)), "Wymagane");

            if (string.IsNullOrWhiteSpace(_invoice.Client.Address.City))
                _messageStore.Add(new FieldIdentifier(_invoice.Client.Address, nameof(_invoice.Client.Address.City)), "Wymagane");
        }

        if (_invoice.InvoicePositions == null || !_invoice.InvoicePositions.Any())
        {
            _messageStore.Add(new FieldIdentifier(_invoice, nameof(_invoice.InvoicePositions)), "Faktura musi zawierać przynajmniej jedną pozycję.");
        }
        else
        {
            foreach (var pos in _invoice.InvoicePositions)
            {
                var fiName = new FieldIdentifier(pos, nameof(pos.ProductName));
                var fiValue = new FieldIdentifier(pos, nameof(pos.ProductValue));
                var fiQty = new FieldIdentifier(pos, nameof(pos.Quantity));

                if (string.IsNullOrWhiteSpace(pos.ProductName))
                    _messageStore.Add(fiName, "Wymagane");

                if ((pos.ProductValue ?? 0) <= 0)
                    _messageStore.Add(fiValue, "Cena > 0");

                if (pos.Quantity <= 0)
                    _messageStore.Add(fiQty, "Ilość > 0");
            }
        }

        _editContext.NotifyValidationStateChanged();

        if (_editContext.GetValidationMessages().Any())
        {
            return;
        }

        _invoice.TotalNet = CalculateTotalNet();
        _invoice.TotalVat = CalculateTotalVat();
        _invoice.TotalGross = CalculateTotalGross();

        if (_invoice.ClientId == null)
        {
            _invoice.Client.Name = _invoice.ClientName;
            _invoice.Client.Nip = _invoice.ClientNip;
        }

        foreach (var pos in _invoice.InvoicePositions)
        {
            if (pos.ProductId == null)
            {
                pos.Product ??= new ProductDto();
                pos.Product.Name = pos.ProductName;
                pos.Product.Value = pos.ProductValue;
                pos.Product.Description = "";
            }
        }

        try
        {
            var result = await InvoiceService.SaveInvoiceAsync(_invoice);
            if (result != null) Navigation.NavigateTo("/invoices");
        }
        catch (Exception ex) { Console.WriteLine($"Błąd zapisu: {ex.Message}"); }
    }
}