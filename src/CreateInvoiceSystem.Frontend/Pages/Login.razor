@page "/login"
@using CreateInvoiceSystem.Frontend.Dto
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Logowanie</h3>

                    <EditForm EditContext="_editContext" OnValidSubmit="HandleLoginSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                        <DataAnnotationsValidator />

                        <div class="form-group mb-3">
                            <label class="form-label">Email: <span class="text-danger">*</span></label>
                            <InputText @bind-Value="_loginRequest.Dto.Email"
                                       type="email"
                                       class="@($"form-control {GetFieldClass(() => _loginRequest.Dto.Email)}")"
                                       placeholder="email@przyklad.pl" />
                            <ValidationMessage For="@(() => _loginRequest.Dto.Email)" class="text-danger small" />
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Hasło: <span class="text-danger">*</span></label>
                            <InputText @bind-Value="_loginRequest.Dto.Password"
                                       type="password"
                                       class="@($"form-control {GetFieldClass(() => _loginRequest.Dto.Password)}")" />
                            <ValidationMessage For="@(() => _loginRequest.Dto.Password)" class="text-danger small" />
                        </div>

                        <div class="form-group mb-3 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <InputCheckbox @bind-Value="_loginRequest.Dto.RememberMe" class="form-check-input" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
                            </div>
                            <a href="/forgot-password" class="text-decoration-none small">Zapomniałeś hasła?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">Zaloguj</button>
                    </EditForm>

                    <div class="text-center">
                        <span class="text-muted small">Nie masz konta?</span>
                        <a href="/register" class="text-decoration-none small ms-1">Zarejestruj mnie</a>
                    </div>

                    @if (!string.IsNullOrEmpty(_statusMessage))
                    {
                        <div class="alert mt-3 @(_statusMessage.Contains("Błąd") ? "alert-danger" : "alert-info")">
                            @_statusMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest _loginRequest = new LoginRequest { Dto = new LoginUserDto() };
    private string _statusMessage = "";
    private EditContext _editContext = default!;
    private ValidationMessageStore _messageStore = default!;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(_loginRequest.Dto);
        _messageStore = new ValidationMessageStore(_edit_context());
        _editContext.OnFieldChanged += (s, e) =>
        {
            _messageStore.Clear(e.FieldIdentifier);
            _editContext.NotifyValidationStateChanged();
        };

        EditContext _edit_context() => _editContext;
    }

    private string GetFieldClass<T>(System.Linq.Expressions.Expression<Func<T>> accessor)
    {
        var fieldId = FieldIdentifier.Create(accessor);
        var fieldHasErrors = _editContext.GetValidationMessages(fieldId).Any();
        if (fieldHasErrors) return "is-invalid";

        if (_editContext.GetValidationMessages().Any()) return "is-valid";

        return "";
    }

    private void HandleInvalidSubmit(EditContext context)
    {
        _statusMessage = "Błąd: uzupełnij wymagane pola.";        
        _editContext.NotifyValidationStateChanged();
    }

    private async Task HandleLoginSubmit()
    {
        try
        {
            _messageStore.Clear();
            _statusMessage = "Łączenie z serwerem...";

            var result = await AuthService.LoginAsync(_loginRequest);

            if (result is { IsSuccess: true } && !string.IsNullOrEmpty(result.Token))
            {
                _statusMessage = "Zalogowano!";

                string storage = _loginRequest.Dto.RememberMe ? "localStorage" : "sessionStorage";

                await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
                await JS.InvokeVoidAsync("sessionStorage.removeItem", "authToken");

                await JS.InvokeVoidAsync($"{storage}.setItem", "authToken", result.Token);

                if (!string.IsNullOrEmpty(result.RefreshToken))
                {
                    await JS.InvokeVoidAsync($"{storage}.setItem", "refreshToken", result.RefreshToken);
                }

                await Task.Delay(500);
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                _statusMessage = $"Błąd: {result?.Message ?? "Nieprawidłowe dane logowania."}";
            }
        }
        catch (Exception ex)
        {
            _statusMessage = $"Błąd krytyczny: {ex.Message}";
        }
    }
}