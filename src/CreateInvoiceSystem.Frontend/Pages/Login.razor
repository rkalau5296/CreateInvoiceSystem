@page "/login"
@using System.Text.Json
@using CreateInvoiceSystem.Frontend.Dto
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@using CreateInvoiceSystem.Frontend.Components
@using Microsoft.AspNetCore.Components.Forms
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="mb-0 text-center">Logowanie</h3>
                </div>

                <div class="card-body p-4">
                    <ValidatedEditForm TModel="LoginUserDto" Model="_loginRequest.Dto" OnValidSubmit="HandleLoginSubmit" OnInvalidSubmit="HandleInvalidSubmit" @ref="formRef">

                        <div class="mb-3">
                            <ValidatedInputText @bind-Value="_loginRequest.Dto.Email"
                                                Type="email"
                                                Label="Email"
                                                Placeholder="email@przyklad.pl" />
                        </div>

                        <div class="mb-3">
                            <ValidatedInputText @bind-Value="_loginRequest.Dto.Password"
                                                Type="password"
                                                Label="Hasło" />
                        </div>

                        <div class="form-group mb-4 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <InputCheckbox @bind-Value="_loginRequest.Dto.RememberMe" class="form-check-input" id="rememberMe" />
                                <label class="form-check-label small" for="rememberMe">Zapamiętaj mnie</label>
                            </div>
                            <a href="/forgot-password" class="text-decoration-none small">Zapomniałeś hasła?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg mb-3">Zaloguj</button>
                        </div>
                    </ValidatedEditForm>

                    <div class="text-center">
                        <span class="text-muted small">Nie masz konta?</span>
                        <a href="/register" class="text-decoration-none small ms-1">Zarejestruj mnie</a>
                    </div>

                    @if (!string.IsNullOrEmpty(_statusMessage))
                    {
                        <div class="alert mt-4 py-2 small @(_statusMessage.Contains("Błąd") ? "alert-danger" : "alert-info")">
                            @_statusMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest _loginRequest = new LoginRequest { Dto = new LoginUserDto() };
    private string _statusMessage = "";
    private ValidatedEditForm<LoginUserDto>? formRef;

    private void HandleInvalidSubmit(EditContext context)
    {
        _statusMessage = "Błąd: uzupełnij wymagane pola.";
    }

    private static string NormalizeFieldName(string original)
    {
        if (string.IsNullOrWhiteSpace(original))
            return original ?? string.Empty;

        var parts = original.Split(new[] { '.', '_', '/' }, StringSplitOptions.RemoveEmptyEntries);
        for (int i = 0; i < parts.Length; i++)
        {
            var p = parts[i];
            if (p.Length == 0) continue;
            parts[i] = char.ToUpperInvariant(p[0]) + (p.Length > 1 ? p.Substring(1) : string.Empty);
        }
        return string.Join('.', parts);
    }

    private async Task HandleLoginSubmit()
    {
        formRef?.ClearServerErrors();
        _statusMessage = "Łączenie z serwerem...";

        try
        {
            var result = await AuthService.LoginAsync(_loginRequest);

            if (result is { IsSuccess: true } && !string.IsNullOrEmpty(result.Token))
            {
                _statusMessage = "Zalogowano!";

                string storage = _loginRequest.Dto.RememberMe ? "localStorage" : "sessionStorage";

                await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
                await JS.InvokeVoidAsync("sessionStorage.removeItem", "authToken");

                await JS.InvokeVoidAsync($"{storage}.setItem", "authToken", result.Token);

                if (!string.IsNullOrEmpty(result.RefreshToken))
                {
                    await JS.InvokeVoidAsync($"{storage}.setItem", "refreshToken", result.RefreshToken);
                }

                await Task.Delay(500);
                Navigation.NavigateTo("/dashboard");
                return;
            }
            else
            {
                var svcMessage = result?.Message;
                var sanitizedResultMessage = string.IsNullOrWhiteSpace(svcMessage)
                    ? "Błąd: Nieprawidłowe dane logowania."
                    : ApiExceptionExtensions.SanitizeMessage(svcMessage);

                if (!sanitizedResultMessage.StartsWith("Błąd"))
                    sanitizedResultMessage = "Błąd: " + sanitizedResultMessage;

                _statusMessage = sanitizedResultMessage;
            }
        }
        catch (ApiException aex)
        {
            bool addedAny = false;

            if (!string.IsNullOrWhiteSpace(aex.Response))
            {
                try
                {
                    using var doc = JsonDocument.Parse(aex.Response);
                    if (doc.RootElement.TryGetProperty("errors", out var errorsElement) && errorsElement.ValueKind == JsonValueKind.Object)
                    {
                        foreach (var prop in errorsElement.EnumerateObject())
                        {
                            var rawField = prop.Name;
                            var fieldName = NormalizeFieldName(rawField);
                            foreach (var msgElem in prop.Value.EnumerateArray())
                            {
                                var fieldMsg = msgElem.GetString() ?? "Błąd walidacji";
                                formRef?.AddServerError(fieldName, fieldMsg);
                                addedAny = true;
                            }
                        }

                        if (addedAny)
                        {
                            formRef?.EditContext?.NotifyValidationStateChanged();
                            return;
                        }
                    }
                }
                catch
                {
                }
            }

            var userMessage = aex.GetUserMessage();
            if (!userMessage.StartsWith("Błąd"))
                userMessage = "Błąd: " + userMessage;

            formRef?.AddServerError(string.Empty, userMessage);
            formRef?.EditContext?.NotifyValidationStateChanged();

            _statusMessage = userMessage;
        }
        catch (Exception ex)
        {
            var sanitizedExMessage = ApiExceptionExtensions.SanitizeMessage(ex.Message);
            if (!sanitizedExMessage.StartsWith("Błąd"))
                sanitizedExMessage = "Błąd: " + sanitizedExMessage;
            _statusMessage = sanitizedExMessage;
        }
    }
}