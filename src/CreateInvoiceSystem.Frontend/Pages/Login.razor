@page "/login"
@using CreateInvoiceSystem.Frontend.Dto
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@attribute [AllowAnonymous]

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Logowanie</h3>

                    <div class="form-group mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" class="form-control" @bind="_loginRequest.Dto.Email" placeholder="email@przyklad.pl" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Hasło:</label>
                        <input type="password" class="form-control" @bind="_loginRequest.Dto.Password" />
                    </div>

                    <div class="form-group mb-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe" @bind="_loginRequest.Dto.RememberMe" />
                            <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
                        </div>
                        <a href="/forgot-password" class="text-decoration-none small">Zapomniałeś hasła?</a>
                    </div>

                    <button class="btn btn-primary w-100 mb-3" @onclick="HandleLogin">Zaloguj</button>

                    <div class="text-center">
                        <span class="text-muted small">Nie masz konta?</span>
                        <a href="/register" class="text-decoration-none small ms-1">Zarejestruj mnie</a>
                    </div>

                    @if (!string.IsNullOrEmpty(_statusMessage))
                    {
                        <div class="alert mt-3 @(_statusMessage.Contains("Błąd") ? "alert-danger" : "alert-info")">
                            @_statusMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginRequest _loginRequest = new LoginRequest { Dto = new LoginUserDto() };
    private string _statusMessage = "";

    private async Task HandleLogin()
    {
        try
        {
            _statusMessage = "Łączenie z serwerem...";

            var result = await AuthService.LoginAsync(_loginRequest);

            if (result is { IsSuccess: true } && !string.IsNullOrEmpty(result.Token))
            {
                _statusMessage = "Zalogowano!";

                string storage = _loginRequest.Dto.RememberMe ? "localStorage" : "sessionStorage";

                await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");
                await JS.InvokeVoidAsync("sessionStorage.removeItem", "authToken");

                await JS.InvokeVoidAsync($"{storage}.setItem", "authToken", result.Token);

                if (!string.IsNullOrEmpty(result.RefreshToken))
                {
                    await JS.InvokeVoidAsync($"{storage}.setItem", "refreshToken", result.RefreshToken);
                }

                await Task.Delay(500);
                Navigation.NavigateTo("/dashboard");
            }
            else
            {
                _statusMessage = $"Błąd: {result?.Message ?? "Nieprawidłowe dane logowania."}";
            }
        }
        catch (Exception ex)
        {
            _statusMessage = $"Błąd krytyczny: {ex.Message}";
        }
    }
}