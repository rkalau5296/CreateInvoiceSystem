@page "/invoices"
@using CreateInvoiceSystem.Frontend.Models
@using CreateInvoiceSystem.Frontend.Services
@using CreateInvoiceSystem.Frontend.Components
@inject InvoiceService InvoiceService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="container-fluid">
    <h3 class="mb-4">Zarządzanie Fakturami</h3>

    <div class="row mb-4 align-items-end">
        <div class="col-md-6">
            <label class="form-label small fw-bold">Wyszukaj fakturę</label>
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0">
                    <i class="bi bi-search text-muted"></i>
                </span>
                <input type="text" class="form-control border-start-0" placeholder="Numer faktury lub kontrahent..."
                       @bind="_searchTerm" @bind:event="oninput" @onkeyup="HandleSearch" />
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-outline-secondary me-2" @onclick="ExportToCsv">
                <i class="bi bi-file-earmark-spreadsheet me-1"></i> Eksportuj CSV
            </button>
            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/invoices/create")'>
                <i class="bi bi-plus-circle me-1"></i> Wystaw nową fakturę
            </button>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light fw-bold">Lista wystawionych faktur</div>
        <div class="card-body p-0">
            <DataTable Items="_invoices" Cols="7" TableClass="table table-hover mb-0" HeaderClass="table-dark" KeySelector="i => i.InvoiceId" NoItemsMessage="Brak faktur spełniających kryteria.">
                <HeaderTemplate>
                    <tr>
                        <th>Numer/Tytuł</th>
                        <th>Kontrahent</th>
                        <th>Data wystawienia</th>
                        <th class="text-end">Kwota netto</th>
                        <th class="text-end">VAT</th>
                        <th class="text-end">Kwota brutto</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                </HeaderTemplate>

                <RowTemplate Context="inv">
                    <td class="align-middle"><strong>@inv.Title</strong></td>
                    <td class="align-middle">@inv.ClientName</td>
                    <td class="align-middle">@inv.CreatedDate.ToShortDateString()</td>
                    <td class="align-middle text-end">@inv.TotalNet.ToString("N2")</td>
                    <td class="align-middle text-end">@inv.TotalVat.ToString("N2")</td>
                    <td class="align-middle text-end fw-bold">@inv.TotalGross.ToString("N2") PLN</td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center gap-2">
                            <button class="btn btn-sm btn-info text-white px-3 shadow-sm"
                                    @onclick='() => Navigation.NavigateTo($"/invoices/view/{inv.InvoiceId}")'>
                                <i class="bi bi-eye me-1"></i> Widok
                            </button>

                            <button class="btn btn-sm btn-primary px-3 shadow-sm"
                                    @onclick='() => Navigation.NavigateTo($"/invoices/edit/{inv.InvoiceId}")'>
                                <i class="bi bi-pencil-square me-1"></i> Edytuj
                            </button>

                            <button class="btn btn-sm btn-danger px-3 shadow-sm"
                                    @onclick="() => ConfirmDelete(inv.InvoiceId, inv.Title)">
                                <i class="bi bi-trash me-1"></i> Usuń
                            </button>
                        </div>
                    </td>
                </RowTemplate>
            </DataTable>
        </div>
    </div>
</div>

<Pagination ItemsOnPageCount="@(_invoices?.Count ?? 0)"
            TotalItems="@_totalCount"
            CurrentPage="@_currentPage"
            CurrentPageChanged="ChangePage"
            PageSize="@_pageSize"
            PageSizeChanged="ChangePageSize"
            ItemLabel="faktur" />

@code {
    private List<InvoiceDto>? _invoices;
    private int _pageSize = 10;
    private int _currentPage = 1;
    private int _totalCount = 0;
    private int _totalPages => _totalCount == 0 ? 1 : (int)Math.Ceiling((double)_totalCount / _pageSize);

    private string _searchTerm = "";
    private System.Timers.Timer? _searchTimer;

    protected override async Task OnInitializedAsync() => await LoadData();

    private async Task LoadData()
    {
        try
        {
            var response = await InvoiceService.GetInvoicesAsync(_currentPage, _pageSize, _searchTerm);
            if (response != null)
            {
                _invoices = response.Data;
                _totalCount = response.TotalCount;
            }
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd ładowania: {ex.Message}");
        }
    }

    private async Task ConfirmDelete(int id, string title)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Czy na pewno chcesz trwale usunąć fakturę {title}?");
        if (confirmed)
        {
            try
            {
                await InvoiceService.DeleteInvoiceAsync(id);
                await LoadData();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Błąd usuwania: {ex.Message}");
            }
        }
    }

    private void HandleSearch()
    {
        _searchTimer?.Stop();
        _searchTimer?.Dispose();

        _searchTimer = new System.Timers.Timer(400);
        _searchTimer.AutoReset = false;
        _searchTimer.Elapsed += async (s, e) =>
        {
            _currentPage = 1;
            await InvokeAsync(LoadData);
        };
        _searchTimer.Start();
    }

    private async Task ChangePageSize(int newSize)
    {
        if (newSize <= 0) return;
        _pageSize = newSize;
        _currentPage = 1;
        await LoadData();
    }

    private async Task ChangePage(int newPage)
    {
        if (newPage >= 1 && newPage <= _totalPages)
        {
            _currentPage = newPage;
            await LoadData();
        }
    }

    public void Dispose()
    {
        if (_searchTimer != null)
        {
            _searchTimer.Stop();
            _searchTimer.Dispose();
        }
    }

    private async Task ExportToCsv() => await InvoiceService.DownloadInvoicesCsvAsync();
}