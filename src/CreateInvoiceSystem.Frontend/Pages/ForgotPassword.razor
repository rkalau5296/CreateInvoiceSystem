@page "/forgot-password"
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using CreateInvoiceSystem.Frontend.Services
@attribute [AllowAnonymous]
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="mb-0 text-center">Resetowanie hasła</h3>
                </div>
                <div class="card-body p-4">
                    @if (_isSent)
                    {
                        <div class="text-center p-2">
                            <div class="mb-4">
                                <i class="bi bi-envelope-check text-success" style="font-size: 4rem;"></i>
                            </div>
                            <h3 class="text-success mb-3">Sprawdź e-mail</h3>
                            <div class="alert alert-success shadow-sm">
                                <p class="mb-0 small">
                                    Jeśli podany adres e-mail znajduje się w naszej bazie, wysłaliśmy na niego instrukcję <strong>resetowania hasła</strong>.
                                    Prosimy o sprawdzenie skrzynki e-mail (oraz folderu Spam).
                                </p>
                            </div>
                            <div class="text-center mt-4">
                                <button type="button" class="btn btn-primary btn-lg w-100" @onclick="GoToLogin">
                                    Przejdź do strony logowania
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-4">Wpisz swój adres e-mail, aby otrzymać link do zmiany hasła.</p>

                        <ValidatedEditForm TModel="ForgotPasswordViewModel" Model="_model" OnValidSubmit="HandleSubmit" OnInvalidSubmit="HandleInvalidSubmit" @ref="validatedForm">
                            <div class="mb-3">
                                <ValidatedInputText @bind-Value="_model.Email" Label="E-mail" Placeholder="Twój e-mail" />
                            </div>

                            @if (!string.IsNullOrEmpty(_errorMessage))
                            {
                                <div class="alert alert-danger small py-2">@_errorMessage</div>
                            }

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@(_isProcessing)">
                                    @if (_isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Wysyłanie...</span>
                                    }
                                    else
                                    {
                                        <span>Wyślij link resetujący</span>
                                    }
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <a href="/login" class="text-decoration-none small text-secondary">
                                    <i class="bi bi-arrow-left me-1"></i> Wróć do logowania
                                </a>
                            </div>
                        </ValidatedEditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordViewModel _model = new();
    private bool _isProcessing;
    private bool _isSent;
    private string? _errorMessage;
    private ValidatedEditForm<ForgotPasswordViewModel>? validatedForm;

    private void HandleInvalidSubmit(EditContext context)
    {
        _errorMessage = "Uzupełnij wymagane pola.";
    }

    private static string NormalizeFieldName(string original)
    {
        if (string.IsNullOrWhiteSpace(original))
            return original ?? string.Empty;

        var parts = original.Split(new[] { '.', '_', '/' }, StringSplitOptions.RemoveEmptyEntries);
        for (int i = 0; i < parts.Length; i++)
        {
            var p = parts[i];
            if (p.Length == 0) continue;
            parts[i] = char.ToUpperInvariant(p[0]) + (p.Length > 1 ? p.Substring(1) : string.Empty);
        }
        return string.Join('.', parts);
    }

    private async Task HandleSubmit()
    {
        validatedForm?.ClearServerErrors();
        _isProcessing = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.ForgotPasswordAsync(_model.Email);

            if (result?.IsSuccess == true)
            {
                _isSent = true;
                return;
            }

            var resultMessage = result?.Message;
            var sanitized = string.IsNullOrWhiteSpace(resultMessage)
                ? "Wystąpił błąd podczas wysyłki."
                : ApiExceptionExtensions.SanitizeMessage(resultMessage);

            if (!sanitized.StartsWith("Błąd"))
                sanitized = "Błąd: " + sanitized;

            _errorMessage = sanitized;
        }
        catch (ApiException aex)
        {
            bool addedAny = false;

            if (!string.IsNullOrWhiteSpace(aex.Response))
            {
                try
                {
                    using var doc = JsonDocument.Parse(aex.Response);
                    if (doc.RootElement.TryGetProperty("errors", out var errorsElement) && errorsElement.ValueKind == JsonValueKind.Object)
                    {
                        foreach (var prop in errorsElement.EnumerateObject())
                        {
                            var rawField = prop.Name;
                            var fieldName = NormalizeFieldName(rawField);
                            foreach (var msgElem in prop.Value.EnumerateArray())
                            {
                                var fieldMsg = msgElem.GetString() ?? "Błąd walidacji";
                                validatedForm?.AddServerError(fieldName, fieldMsg);
                                addedAny = true;
                            }
                        }

                        if (addedAny)
                        {
                            validatedForm?.EditContext?.NotifyValidationStateChanged();
                            _isProcessing = false;
                            return;
                        }
                    }
                }
                catch
                {
                }
            }

            var userMessage = aex.GetUserMessage();
            if (!userMessage.StartsWith("Błąd"))
                userMessage = "Błąd: " + userMessage;

            validatedForm?.AddServerError(string.Empty, userMessage);
            validatedForm?.EditContext?.NotifyValidationStateChanged();

            _errorMessage = userMessage;
        }
        catch (Exception ex)
        {
            var sanitizedEx = ApiExceptionExtensions.SanitizeMessage(ex.Message);
            if (!sanitizedEx.StartsWith("Błąd"))
                sanitizedEx = "Błąd: " + sanitizedEx;
            _errorMessage = sanitizedEx;
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private void GoToLogin() => Navigation.NavigateTo("/login");

    public class ForgotPasswordViewModel
    {
        [Required(ErrorMessage = "Podaj adres e-mail")]
        [EmailAddress(ErrorMessage = "Niepoprawny format adresu")]
        public string Email { get; set; } = string.Empty;
    }
}