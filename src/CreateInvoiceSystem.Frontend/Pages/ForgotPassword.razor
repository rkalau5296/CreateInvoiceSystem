@page "/forgot-password"
@using System.ComponentModel.DataAnnotations
@using CreateInvoiceSystem.Frontend.Services
@attribute [AllowAnonymous]
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="width: 100%; max-width: 400px;">
        <div class="card-body p-4">
            <h3 class="card-title text-center mb-4">Resetowanie hasła</h3>

            @if (_isSent)
            {
                <div class="alert alert-success">
                    Jeśli podany adres e-mail znajduje się w naszej bazie, wysłaliśmy na niego instrukcję resetowania hasła.
                </div>
                <div class="text-center mt-3">
                    <button type="button" class="btn btn-outline-primary w-100" @onclick="GoToLogin">
                        Powrót do logowania
                    </button>
                </div>
            }
            else
            {
                <ValidatedEditForm TModel="ForgotPasswordViewModel" Model="_model" OnValidSubmit="HandleSubmit" OnInvalidSubmit="HandleInvalidSubmit" @ref="validatedForm">
                    <ValidatedInputText @bind-Value="_model.Email" Label="E-mail" Placeholder="Twój e-mail" />
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger small">@_errorMessage</div>
                    }
                    <button type="submit" class="btn btn-primary w-100" disabled="@(_isProcessing)">
                        @if (_isProcessing)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Wyślij link resetujący
                    </button>

                    <div class="text-center mt-3">
                        <a href="/login" class="text-decoration-none small text-secondary">Wróć do logowania</a>
                    </div>
                </ValidatedEditForm>
            }
        </div>
    </div>
</div>

@code {
    private ForgotPasswordViewModel _model = new();
    private bool _isProcessing;
    private bool _isSent;
    private string? _errorMessage;
    private ValidatedEditForm<ForgotPasswordViewModel>? validatedForm;

    private void HandleInvalidSubmit(EditContext context)
    {
        _errorMessage = "Uzupełnij wymagane pola.";
    }

    private async Task HandleSubmit()
    {
        _isProcessing = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.ForgotPasswordAsync(_model.Email);

            if (result?.IsSuccess == true)
            {
                _isSent = true;
            }
            else
            {
                _errorMessage = result?.Message ?? "Wystąpił błąd podczas wysyłki.";
            }
        }
        catch
        {
            _errorMessage = "Wystąpił nieoczekiwany błąd.";
        }
        finally
        {
            _isProcessing = false;
            StateHasChanged();
        }
    }

    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }

    public class ForgotPasswordViewModel
    {
        [Required(ErrorMessage = "Podaj adres e-mail")]
        [EmailAddress(ErrorMessage = "Niepoprawny format")]
        public string Email { get; set; } = string.Empty;
    }
}